<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <solid android:color="#1b000000" />
                </shape>
            </item>
            <item android:top="1.0px" android:bottom="1.0px">
                <shape>
                    <solid android:color="#ffeeeeee" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <solid android:color="#19000000" />
                </shape>
            </item>
            <item android:bottom="1.0px">
                <shape>
                    <solid android:color="#ffffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>