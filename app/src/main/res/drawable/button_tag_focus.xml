<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray_text_light" />
            <stroke android:width="0.9dip" android:color="@color/gray_text_light" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="0.9dip" android:color="@color/white" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
</selector>